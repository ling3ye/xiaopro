---
/**
 * 实战方案 - 列表页和详情页
 *
 * 展示所有实战方案案例，支持单个案例详情查看
 * 支持多语言路由
 *
 * @route /[lang]/solutions/[...path]
 *
 * @author Claude Code
 * @version 1.0.0
 */

import Layout from '../../../layouts/Layout.astro';
import Card from '../../../components/Card.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import Pagination from '../../../components/Pagination.astro';
import { getCollection, getEntry } from 'astro:content';
import { useTranslations, getLocalizedPath } from '../../../utils/i18n';
import { languages } from '../../../i18n/config';
import type { SupportedLocale } from '../../../i18n/config';

// 获取语言参数
export async function getStaticPaths() {
  const paths: any[] = [];
  const ITEMS_PER_PAGE = 12;

  // 获取所有方案
  const allSolutions = await getCollection('solutions');

  for (const lang of Object.keys(languages)) {
    // 过滤该语言的方案
    const solutions = allSolutions.filter(({ id }) => id.startsWith(`${lang}/`));

    // 计算分页
    const totalItems = solutions.length;
    const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE) || 1;

    // 为每页生成路径
    for (let page = 1; page <= totalPages; page++) {
      // 第1页使用空路径，其他页使用 /page/2 等格式
      const pagePath = page === 1 ? undefined : `page/${page}`;
      paths.push({ params: { lang, path: pagePath } });
    }

    // 详情页路径
    solutions.forEach((solution) => {
      const pathParts = solution.id.split('/');
      const slug = pathParts[pathParts.length - 1].replace(/\.md$/, '');
      paths.push({ params: { lang, path: slug } });
    });
  }

  return paths;
}

const { lang, path: slug } = Astro.params;
const currentLocale: SupportedLocale = lang as SupportedLocale;
const t = useTranslations(currentLocale);

// 解析路径：判断是否是分页
// slug 格式可能是：
// - undefined: 第1页列表
// - page/2, page/3 等：其他页列表
// - smart-plant-monitor 等：详情页
const isListPage = !slug || (slug && slug.startsWith('page/'));

// 分页配置
const ITEMS_PER_PAGE = 12;
let currentPage = 1;

if (slug && slug.startsWith('page/')) {
  const pageNum = slug.replace('page/', '');
  currentPage = Number(pageNum) || 1;
}

// 获取所有方案数据
const allSolutions = await getCollection('solutions', ({ id }) => {
  return id.startsWith(`${lang}/`);
});

// 计算分页
const totalItems = allSolutions.length;
const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE) || 1;
const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
const endIndex = startIndex + ITEMS_PER_PAGE;
const currentSolutions = allSolutions.slice(startIndex, endIndex);

// 详情页：获取当前文章数据（仅当不是分页路径时）
let solution: any = null;
let board = null;
let modules: any[] = [];

if (!isListPage) {
  const entry = await getEntry('solutions', `${lang}/${slug}`);
  if (entry) {
    solution = entry;
    if ('boardId' in solution.data && solution.data.boardId) {
      const boardId = (solution.data.boardId as any).id || String(solution.data.boardId);
      board = await getEntry('boards', boardId);
    }
    if ('moduleIds' in solution.data && Array.isArray(solution.data.moduleIds)) {
      modules = await Promise.all(
        solution.data.moduleIds.map(async (moduleId: any) => {
          const id = moduleId.id || String(moduleId);
          return getEntry('modules', id);
        })
      );
    }
  } else {
    console.warn('Entry not found for ID:', `${lang}/${slug}`);
  }
}

// 面包屑导航
const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('/', currentLocale) },
  { label: t('nav.solutions'), href: getLocalizedPath('/solutions', currentLocale) },
];

if (!isListPage && solution) {
  breadcrumbItems.push({
    label: solution.data.title,
    current: true
  } as any);
}

// 构建结构化数据
let structuredData: any = null;

if (!isListPage && solution) {
  // 文章详情页的结构化数据
  structuredData = {
    '@context': 'https://schema.org',
    '@type': 'TechArticle',
    headline: solution.data.title,
    description: solution.data.intro || '',
    image: solution.data.image ? `https://xiaopro.com${solution.data.image}` : undefined,
    datePublished: solution.data.date ? (solution.data.date as Date).toISOString() : undefined,
    author: {
      '@type': 'Organization',
      name: 'XIAOPRO'
    },
    publisher: {
      '@type': 'Organization',
      name: 'XIAOPRO',
      logo: {
        '@type': 'ImageObject',
        url: 'https://xiaopro.com/logo.png'
      }
    }
  };
}

// 动态 meta description
const pageDescription = !isListPage && solution
  ? solution.data.intro || '探索硬件开发的无限可能，从基础教程到高级案例，一站式学习平台'
  : '多个模块联合使用的实战案例，适合有一定基础的学习者进行项目实践。';

// 分页页面的 robots 设置
const robotsMeta = currentPage > 1 ? 'noindex, follow' : undefined;
---

<Layout
  title={isListPage ? t('nav.solutions') : solution?.data.title}
  description={pageDescription}
  lang={lang}
  currentPath={`/${lang}/solutions/${slug || ''}`}
  image={!isListPage && solution?.data.image ? solution.data.image : undefined}
  robots={robotsMeta}
  structuredData={structuredData}
>
  <!-- 面包屑导航 -->
  <div class="container">
    <Breadcrumb items={breadcrumbItems} />
  </div>

  <!-- 列表页 -->
  {isListPage && (
    <section class="category-page">
      <div class="container">
        <!-- 页头 -->
        <header class="category-header">
          <h1 class="category-title">{t('nav.solutions')}</h1>
          <p class="category-description">
            多个模块联合使用的实战案例，适合有一定基础的学习者进行项目实践。
          </p>
          <div class="category-stats">
            <span class="stat-item">
              <span class="stat-value">{startIndex + 1}-{Math.min(endIndex, totalItems)}</span>
              <span class="stat-label">/ 共 {totalItems} 个方案</span>
            </span>
          </div>
        </header>

        <!-- 方案列表 -->
        <div class="solution-grid">
          {currentSolutions.map(solution => (
            <Card
              type="article"
              title={solution.data.title}
              description={solution.data.intro}
              link={getLocalizedPath(`/solutions/${solution.id.replace(`${lang}/`, '').replace('.md', '')}`, currentLocale)}
              tags={['案例']}
              difficulty={('difficulty' in solution.data ? solution.data.difficulty as 'Easy' | 'Medium' | 'Hard' : undefined)}
              image={solution.data.image}
            />
          ))}
        </div>

        <!-- 分页 -->
        {totalPages > 1 && (
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            baseUrl={getLocalizedPath('/solutions', currentLocale)}
            getUrl={(page) => getLocalizedPath(page === 1 ? '/solutions' : `/solutions/page/${page}`, currentLocale)}
          />
        )}
      </div>
    </section>
  )}

  <!-- 详情页 -->
  {!isListPage && solution && (
    <section class="article-detail">
      <div class="container article-layout">
        <!-- 主内容区 -->
        <main class="article-main">
          <!-- 文章头部 -->
          <header class="article-header">
            <div class="article-meta">
              <span class="article-tag article-tag--solution">案例</span>
              {('difficulty' in solution.data) && (
                <span class={`article-difficulty article-difficulty--${(solution.data.difficulty as string).toLowerCase()}`}>
                  {solution.data.difficulty}
                </span>
              )}
              {board && (
                <span class="article-board">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2"/>
                    <rect x="9" y="9" width="6" height="6"/>
                  </svg>
                  {board.data.brand} {board.data.model}
                </span>
              )}
            </div>
            <h1 class="article-title">{solution.data.title}</h1>
            {solution.data.intro && (
              <p class="article-intro">{solution.data.intro}</p>
            )}
          </header>

          <!-- 文章内容 -->
          <div class="article-content prose" set:html={solution.rendered?.html} />
        </main>

        <!-- 侧边栏 -->
        <aside class="article-sidebar">
          <!-- 相关方案 -->
          <div class="sidebar-section">
            <h3 class="sidebar-title">相关方案</h3>
            <div class="related-list">
              {allSolutions
                .filter(s => s.id !== `${lang}/${slug}.md`)
                .slice(0, 5)
                .map(related => (
                  <a
                    href={getLocalizedPath(`/solutions/${related.id.replace(`${lang}/`, '').replace('.md', '')}`, currentLocale)}
                    class="related-item"
                  >
                    <span class="related-title">{related.data.title}</span>
                  </a>
                ))}
            </div>
          </div>

          <!-- 使用的开发板 -->
          {board && (
            <div class="sidebar-section">
              <h3 class="sidebar-title">使用的开发板</h3>
              <a
                href={getLocalizedPath(`/boards/${board.id}`, currentLocale)}
                class="hardware-card"
              >
                <div class="hardware-info">
                  <span class="hardware-brand">{board.data.brand}</span>
                  <span class="hardware-model">{board.data.model}</span>
                </div>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"/>
                  <path d="M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          )}

          <!-- 使用的模块列表 -->
          {modules.length > 0 && (
            <div class="sidebar-section">
              <h3 class="sidebar-title">使用的模块</h3>
              <div class="modules-list">
                {modules.map((mod: any) => (
                  mod && (
                    <a
                      href={getLocalizedPath(`/modules/${mod.id}`, currentLocale)}
                      class="hardware-card"
                    >
                      <div class="hardware-info">
                        <span class="hardware-brand">{mod.data.brand || ''}</span>
                        <span class="hardware-model">{mod.data.model}</span>
                      </div>
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14"/>
                        <path d="M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                  )
                ))}
              </div>
            </div>
          )}
        </aside>
      </div>
    </section>
  )}

  <!-- 未找到页面 -->
  {!isListPage && !solution && (
    <section class="not-found">
      <div class="container">
        <h1>未找到该方案</h1>
        <a href={getLocalizedPath('/solutions', currentLocale)} class="btn">返回方案列表</a>
      </div>
    </section>
  )}
</Layout>

<style>
  /* ============================================
     分类页样式
     ============================================ */
  .category-page {
    padding: var(--space-3xl) 0;
  }

  .category-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .category-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, var(--color-text-primary) 0%, var(--color-success) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .category-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  .category-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .stat-value {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-success);
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  .solution-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    align-items: start;
  }

  @media (max-width: 1200px) {
    .solution-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .solution-grid {
      grid-template-columns: 1fr;
    }
  }

  /* ============================================
     文章详情页样式
     ============================================ */
  .article-detail {
    padding: var(--space-3xl) 0;
  }

  .article-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
  }

  .article-header {
    margin-bottom: var(--space-2xl);
  }

  .article-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .article-tag {
    padding: 4px 12px;
    border-radius: var(--radius-md);
    background: var(--color-success);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .article-tag--solution {
    background: var(--color-success);
  }

  .article-difficulty {
    padding: 4px 12px;
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .article-difficulty--easy {
    background: var(--color-success-light);
    color: var(--color-success);
  }

  .article-difficulty--medium {
    background: var(--color-warning-light);
    color: var(--color-warning);
  }

  .article-difficulty--hard {
    background: var(--color-error-light);
    color: var(--color-error);
  }

  .article-board {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 4px 12px;
    border-radius: var(--radius-md);
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    font-size: var(--text-xs);
  }

  .article-board svg {
    width: 14px;
    height: 14px;
  }

  .article-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--space-md);
    color: var(--color-text-primary);
  }

  .article-intro {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .article-content {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
  }

  .article-content :global(h2) {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-success);
  }

  .article-content :global(h3) {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .article-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .article-content :global(code) {
    padding: 2px 6px;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
  }

  .article-content :global(pre) {
    margin: var(--space-md) 0;
    padding: var(--space-md);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    overflow-x: auto;
  }

  .article-content :global(pre code) {
    padding: 0;
    background: none;
  }

  /* ============================================
     侧边栏样式
     ============================================ */
  .article-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  .sidebar-section {
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .sidebar-title {
    font-size: var(--text-base);
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--color-text-primary);
  }

  .related-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .related-item {
    display: block;
    padding: var(--space-sm);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .related-item:hover {
    background: var(--color-bg-tertiary);
  }

  .related-title {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .related-item:hover .related-title {
    color: var(--color-success);
  }

  .hardware-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .hardware-card:hover {
    background: var(--color-bg-elevated);
    transform: translateX(4px);
  }

  .hardware-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .hardware-brand {
    font-size: var(--text-xs);
    color: var(--color-primary);
  }

  .hardware-model {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .hardware-card svg {
    width: 16px;
    height: 16px;
    color: var(--color-text-tertiary);
  }

  .modules-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  /* ============================================
     未找到页面样式
     ============================================ */
  .not-found {
    padding: var(--space-5xl) 0;
    text-align: center;
  }

  .not-found h1 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .btn {
    display: inline-block;
    padding: 12px 24px;
    background: var(--color-success);
    color: white;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .btn:hover {
    background: var(--color-success-hover);
    transform: translateY(-2px);
  }

  /* ============================================
     响应式设计
     ============================================ */
  @media (min-width: 1024px) {
    .article-layout {
      grid-template-columns: 1fr 320px;
    }

    .article-sidebar {
      position: sticky;
      top: calc(var(--header-height) + var(--space-lg));
    }
  }
</style>
