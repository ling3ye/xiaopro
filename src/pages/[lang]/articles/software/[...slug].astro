---
import Layout from '../../../../layouts/Layout.astro';
import Breadcrumb from '../../../../components/Breadcrumb.astro';
import { useTranslations, getLocalizedPath } from '../../../../utils/i18n';
import type { SupportedLocale } from '../../../../i18n/config';

const DOMAIN = 'software';
const DOMAIN_LABEL = '软件';

export async function getStaticPaths() {
  const paths: any[] = [];
  const { getCollection } = await import('astro:content');
  const { languages } = await import('../../../../i18n/config');
  const domain = 'software';

  const allArticles = await getCollection('articles');

  for (const lang of Object.keys(languages)) {
    const articles = allArticles.filter(
      ({ id, data }) =>
        id.startsWith(`${lang}/`) &&
        data.domain === domain
    );

    articles.forEach((article) => {
      const pathParts = article.id.split('/');
      const slug = pathParts[pathParts.length - 1].replace(/\.md$/, '');
      paths.push({
        params: { lang, slug },
        props: { article }
      });
    });
  }

  return paths;
}

const { lang, slug } = Astro.params;
const { article } = Astro.props;
const currentLocale: SupportedLocale = lang as SupportedLocale;
const t = useTranslations(currentLocale);

const relatedBoardEntries = article.data.relatedBoards
  ? await Promise.all(article.data.relatedBoards.map((ref: any) => ref.resolve()))
  : [];

const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('/', currentLocale) },
  { label: t('nav.articles'), href: getLocalizedPath('/articles', currentLocale) },
  { label: DOMAIN_LABEL, href: getLocalizedPath(`/articles/${DOMAIN}`, currentLocale) },
  { label: article.data.title, current: true }
];

const siteUrl = Astro.site || 'https://lingflux.com';
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: article.data.title,
  description: article.data.intro || '',
  image: article.data.image ? new URL(article.data.image, siteUrl).href : undefined,
  datePublished: (article.data.date as Date).toISOString(),
  articleSection: DOMAIN,
  author: { '@type': 'Organization', name: 'LINGFLUX' },
  publisher: { '@type': 'Organization', name: 'LINGFLUX' }
};
---
<Layout
  title={article.data.title}
  description={article.data.intro || t('articles.description')}
  lang={lang}
  currentPath={`/${lang}/articles/${DOMAIN}/${slug}`}
  image={article.data.image}
  structuredData={structuredData}
>
  <div class="container">
    <Breadcrumb items={breadcrumbItems} />
  </div>

  <article class="article-detail">
    <div class="container article-layout">
      <main class="article-main">
        <header class="article-header">
          <div class="article-meta">
            <span class="meta-badge domain-badge">{DOMAIN_LABEL}</span>
            <span class="meta-badge format-badge">{article.data.format}</span>
            {article.data.platforms && article.data.platforms.map((p: string) => (
              <span class="meta-badge platform-badge">{p}</span>
            ))}
            <time class="article-date" datetime={(article.data.date as Date).toISOString()}>
              {(article.data.date as Date).toLocaleDateString(lang === 'en' ? 'en-US' : 'zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
          <h1 class="article-title">{article.data.title}</h1>
          {article.data.intro && <p class="article-intro">{article.data.intro}</p>}
          {article.data.tags && article.data.tags.length > 0 && (
            <div class="article-tags">
              {article.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
            </div>
          )}
        </header>

        <div class="markdown-content" set:html={article.rendered?.html} />

        {relatedBoardEntries.length > 0 && (
          <section class="related-hardware">
            <h2>相关硬件</h2>
            <div class="hardware-grid">
              {relatedBoardEntries.map(board => (
                <a href={getLocalizedPath(`/boards/${board.id}`, currentLocale)} class="hardware-card">
                  {board.data.image && <img src={board.data.image} alt={board.data.model} />}
                  <h3>{board.data.brand} {board.data.model}</h3>
                </a>
              ))}
            </div>
          </section>
        )}
      </main>

      <aside class="article-sidebar"></aside>
    </div>
  </article>
</Layout>

<style>
  .article-detail { padding: var(--space-3xl) 0; }
  .article-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
  }
  @media (min-width: 1024px) {
    .article-layout { grid-template-columns: 1fr 300px; }
    .article-sidebar { position: sticky; top: calc(var(--header-height) + var(--space-lg)); }
  }
  .article-header { margin-bottom: var(--space-2xl); }
  .article-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  .meta-badge {
    padding: 4px 12px;
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
  }
  .domain-badge { background: linear-gradient(135deg, #3B82F6 0%, #06B6D4 100%); color: white; }
  .format-badge { background: var(--color-bg-tertiary); color: var(--color-text-secondary); border: 1px solid var(--color-border); }
  .platform-badge { background: var(--color-primary); color: white; }
  .article-date { font-size: var(--text-sm); color: var(--color-text-tertiary); }
  .article-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--space-md);
    color: var(--color-text-primary);
    line-height: 1.3;
  }
  .article-intro {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }
  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }
  .tag {
    padding: 3px 10px;
    border-radius: var(--radius-md);
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    font-size: var(--text-xs);
    border: 1px solid var(--color-border);
  }
  /* 文章内容样式 - 使用全局 markdown-content 样式，只覆盖主题色 */
  .markdown-content {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
  }

  /* Software 分类主题色覆盖 */
  .markdown-content h2 {
    border-bottom: 2px solid #3B82F6;
  }

  .markdown-content blockquote {
    border-left-color: #3B82F6;
  }
  .related-hardware {
    margin-top: var(--space-2xl);
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }
  .related-hardware h2 {
    font-size: var(--text-lg);
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--color-text-primary);
  }
  .hardware-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: var(--space-md);
  }
  .hardware-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  .hardware-card:hover { border-color: var(--color-primary); transform: translateY(-2px); }
  .hardware-card img {
    width: 100%;
    height: 100px;
    object-fit: contain;
    border-radius: var(--radius-sm);
  }
  .hardware-card h3 {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
  }
</style>
