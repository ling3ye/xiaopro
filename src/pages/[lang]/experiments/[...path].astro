---
/**
 * 基础实验 - 列表页和详情页
 *
 * 展示所有基础实验教程，支持单个实验详情查看
 * 支持多语言路由
 *
 * @route /[lang]/experiments/[...path]
 *
 * @author Claude Code
 * @version 1.0.0
 */

import Layout from '../../../layouts/Layout.astro';
import Card from '../../../components/Card.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import Pagination from '../../../components/Pagination.astro';
import { getCollection, getEntry } from 'astro:content';
import { useTranslations, getLocalizedPath } from '../../../utils/i18n';
import { languages } from '../../../i18n/config';
import type { SupportedLocale } from '../../../i18n/config';

// 获取语言参数
export async function getStaticPaths() {
  const paths: any[] = [];
  const ITEMS_PER_PAGE = 12;

  // 获取所有实验
  const allExperiments = await getCollection('experiments');

  // 获取所有分类（从实验路径中提取）
  const categories = new Set<string>();
  allExperiments.forEach(({ id }) => {
    const pathParts = id.split('/');
    if (pathParts.length >= 2) {
      categories.add(pathParts[0]);
    }
  });

  // 为每种语言生成路径
  for (const lang of Object.keys(languages)) {
    // 过滤该语言的实验（路径格式：category/zh-cn/article.md）
    const experiments = allExperiments.filter(({ id }) => id.includes(`/${lang}/`));

    // 生成全局列表分页路径
    const totalItems = experiments.length;
    const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE) || 1;

    for (let page = 1; page <= totalPages; page++) {
      const pagePath = page === 1 ? undefined : `page/${page}`;
      paths.push({ params: { lang, path: pagePath } });
    }

    // 为每个分类生成分页路径
    for (const category of categories) {
      const categoryExperiments = experiments.filter(({ id }) => id.startsWith(`${category}/`));
      const categoryTotalPages = Math.ceil(categoryExperiments.length / ITEMS_PER_PAGE) || 1;

      for (let page = 1; page <= categoryTotalPages; page++) {
        if (page === 1) {
          // 第1页路径为 category
          paths.push({ params: { lang, path: category } });
        } else {
          // 其他页路径为 category/page/2
          paths.push({ params: { lang, path: `${category}/page/${page}` } });
        }
      }
    }

    // 详情页路径（格式：category/slug）
    experiments.forEach((experiment) => {
      const pathParts = experiment.id.split('/');
      const category = pathParts[0]; // 第1部分是分类 (esp32, arduino, etc.)
      const slug = pathParts[pathParts.length - 1].replace(/\.md$/, '');
      paths.push({ params: { lang, path: `${category}/${slug}` } });
    });
  }

  return paths;
}

const { lang, path: slug } = Astro.params;
const currentLocale: SupportedLocale = lang as SupportedLocale;
const t = useTranslations(currentLocale);

// 解析路径：判断页面类型
// slug 格式可能是：
// - undefined: 全局第1页列表
// - page/2, page/3 等：全局其他页列表
// - esp32: 分类第1页列表
// - esp32/page/2 等：分类其他页列表
// - esp32/esp32-servo 等：详情页（分类/slug）

// 获取所有可用分类
const allExperiments = await getCollection('experiments', ({ id }) => {
  return id.includes(`/${lang}/`);
});
const categories = new Set<string>();
allExperiments.forEach(({ id }) => {
  const pathParts = id.split('/');
  if (pathParts.length >= 2) {
    categories.add(pathParts[0]);
  }
});

// 判断页面类型
let pageType: 'global-list' | 'category-list' | 'detail' = 'global-list';
let currentCategory = '';
let currentSlug = '';
let currentPage = 1;

if (!slug) {
  // 空路径：全局第1页
  pageType = 'global-list';
} else if (slug.startsWith('page/')) {
  // page/2 等：全局其他页
  pageType = 'global-list';
  const pageNum = slug.replace('page/', '');
  currentPage = Number(pageNum) || 1;
} else {
  const pathParts = slug.split('/');
  if (pathParts.length === 1) {
    // esp32: 分类第1页列表
    pageType = 'category-list';
    currentCategory = pathParts[0];
  } else if (pathParts.length === 2 && pathParts[1].startsWith('page/')) {
    // esp32/page/2: 分类其他页
    pageType = 'category-list';
    currentCategory = pathParts[0];
    const pageNum = pathParts[1].replace('page/', '');
    currentPage = Number(pageNum) || 1;
  } else {
    // esp32/esp32-servo: 详情页
    pageType = 'detail';
    currentCategory = pathParts[0];
    currentSlug = pathParts[pathParts.length - 1];
  }
}

// 分页配置
const ITEMS_PER_PAGE = 12;

// 根据页面类型过滤实验
let filteredExperiments = allExperiments;
let totalPages = 1;

if (pageType === 'category-list' && currentCategory) {
  // 过滤该分类的实验
  filteredExperiments = allExperiments.filter(({ id }) => id.startsWith(`${currentCategory}/`));
} else {
  // 全局列表：显示所有实验
  filteredExperiments = allExperiments;
}

// 计算分页
const totalItems = filteredExperiments.length;
totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE) || 1;
const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
const endIndex = startIndex + ITEMS_PER_PAGE;
const currentExperiments = filteredExperiments.slice(startIndex, endIndex);

// 详情页：获取当前文章数据
let experiment = null;
let board = null;
let module = null;

if (pageType === 'detail' && currentCategory && currentSlug) {
  // 使用 category 和 slug 查找实验（路径格式：category/zh-cn/article.md）
  experiment = allExperiments.find(({ id }) => id.startsWith(`${currentCategory}/${lang}/`) && id.endsWith(`/${currentSlug}.md`));
  if (experiment) {
    // 解析关联的开发板和模块
    if ('boardId' in experiment.data && experiment.data.boardId) {
      const boardId = (experiment.data.boardId as any).id || String(experiment.data.boardId);
      board = await getEntry('boards', boardId);
    }
    if ('moduleId' in experiment.data && experiment.data.moduleId) {
      const moduleId = (experiment.data.moduleId as any).id || String(experiment.data.moduleId);
      module = await getEntry('modules', moduleId);
    }
  }
}

// 面包屑导航
const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('/', currentLocale) },
  { label: t('nav.experiments'), href: getLocalizedPath('/experiments', currentLocale) },
];

if (pageType === 'category-list' && currentCategory) {
  // 分类列表页：添加分类
  breadcrumbItems.push({
    label: currentCategory.toUpperCase(),
    current: true
  } as any);
} else if (pageType === 'detail' && experiment && currentCategory) {
  // 详情页：添加分类和文章标题
  breadcrumbItems.push({
    label: currentCategory.toUpperCase(),
    href: getLocalizedPath(`/experiments/${currentCategory}`, currentLocale)
  });
  breadcrumbItems.push({
    label: experiment.data.title,
    current: true
  } as any);
}

// 构建结构化数据
let structuredData: any = null;
const siteUrl = Astro.site || 'https://lingflux.com';

if (pageType === 'detail' && experiment) {
  // 文章详情页的结构化数据
  structuredData = {
    '@context': 'https://schema.org',
    '@type': 'TechArticle',
    headline: experiment.data.title,
    description: experiment.data.intro || '',
    image: experiment.data.image ? new URL(experiment.data.image, siteUrl).href : undefined,
    datePublished: experiment.data.date ? (experiment.data.date as Date).toISOString() : undefined,
    author: {
      '@type': 'Organization',
      name: 'LINGFLUX'
    },
    publisher: {
      '@type': 'Organization',
      name: 'LINGFLUX',
      logo: {
        '@type': 'ImageObject',
        url: new URL('/logo.png', siteUrl).href
      }
    }
  };
}

// 动态 meta description
const pageDescription = pageType === 'detail' && experiment
  ? experiment.data.intro || '探索硬件开发的无限可能，从基础教程到高级案例，一站式学习平台'
  : (currentCategory ? `${currentCategory.toUpperCase()} 开发板的基础实验教程，适合初学者入门学习。` : '单个开发板配合单个模块的基础实验教程，适合初学者入门学习。');

// 分页页面的 robots 设置
const robotsMeta = currentPage > 1 ? 'noindex, follow' : undefined;
---

<Layout
  title={pageType === 'detail' ? experiment?.data.title : (currentCategory ? `${currentCategory.toUpperCase()} - ${t('nav.experiments')}` : t('nav.experiments'))}
  description={pageDescription}
  lang={lang}
  currentPath={`/${lang}/experiments/${slug || ''}`}
  image={pageType === 'detail' && experiment?.data.image ? experiment.data.image : undefined}
  robots={robotsMeta}
  structuredData={structuredData}
>
  <!-- 面包屑导航 -->
  <div class="container">
    <Breadcrumb items={breadcrumbItems} />
  </div>

  <!-- 列表页（全局或分类） -->
  {pageType !== 'detail' && (
    <section class="category-page">
      <div class="container">
        <!-- 页头 -->
        <header class="category-header">
          <h1 class="category-title">{currentCategory ? currentCategory.toUpperCase() : t('nav.experiments')}</h1>
          <p class="category-description">
            {currentCategory ? `${currentCategory.toUpperCase()} 开发板的基础实验教程，适合初学者入门学习。` : '单个开发板配合单个模块的基础实验教程，适合初学者入门学习。'}
          </p>
          <div class="category-stats">
            <span class="stat-item">
              <span class="stat-value">{startIndex + 1}-{Math.min(endIndex, totalItems)}</span>
              <span class="stat-label">/ 共 {totalItems} 个实验</span>
            </span>
          </div>
        </header>

        <!-- 实验列表 -->
        <div class="experiment-grid">
          {currentExperiments.map(experiment => {
            // 提取分类和文件名（路径格式：category/zh-cn/article.md）
            const category = experiment.id.split('/')[0];
            const slug = experiment.id.replace('.md', '').split('/').pop();
            return (
              <Card
                type="article"
                title={experiment.data.title}
                description={experiment.data.intro}
                link={getLocalizedPath(`/experiments/${category}/${slug}`, currentLocale)}
                tags={['教程']}
                date={('date' in experiment.data ? experiment.data.date as Date : undefined)}
                image={experiment.data.image}
              />
            );
          })}
        </div>

        <!-- 分页 -->
        {totalPages > 1 && (
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            baseUrl={currentCategory ? getLocalizedPath(`/experiments/${currentCategory}`, currentLocale) : getLocalizedPath('/experiments', currentLocale)}
            getUrl={(page) => currentCategory
              ? getLocalizedPath(page === 1 ? `/experiments/${currentCategory}` : `/experiments/${currentCategory}/page/${page}`, currentLocale)
              : getLocalizedPath(page === 1 ? '/experiments' : `/experiments/page/${page}`, currentLocale)}
          />
        )}
      </div>
    </section>
  )}

  <!-- 详情页 -->
  {pageType === 'detail' && experiment && (
    <section class="article-detail">
      <div class="container article-layout">
        <!-- 主内容区 -->
        <main class="article-main">
          <!-- 文章头部 -->
          <header class="article-header">
            <div class="article-meta">
              <span class="article-tag">教程</span>
              {board && (
                <span class="article-board">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="2"/>
                    <rect x="9" y="9" width="6" height="6"/>
                  </svg>
                  {board.data.brand} {board.data.model}
                </span>
              )}
              {module && (
                <span class="article-module">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5"/>
                    <path d="M2 12l10 5 10-5"/>
                  </svg>
                  {module.data.model}
                </span>
              )}
            </div>
            <h1 class="article-title">{experiment.data.title}</h1>
            {experiment.data.intro && (
              <p class="article-intro">{experiment.data.intro}</p>
            )}
          </header>

          <!-- 文章内容 -->
          <div class="article-content prose" set:html={experiment.rendered?.html} />
        </main>

        <!-- 侧边栏 -->
        <aside class="article-sidebar">
          <!-- 相关实验 -->
          <div class="sidebar-section">
            <h3 class="sidebar-title">相关实验</h3>
            <div class="related-list">
              {allExperiments
                .filter(e => e.id !== experiment?.id)
                .slice(0, 5)
                .map(related => {
                  const relatedCategory = related.id.split('/')[0];
                  const relatedSlug = related.id.replace('.md', '').split('/').pop();
                  return (
                    <a
                      href={getLocalizedPath(`/experiments/${relatedCategory}/${relatedSlug}`, currentLocale)}
                      class="related-item"
                    >
                      <span class="related-title">{related.data.title}</span>
                    </a>
                  );
                })}
            </div>
          </div>

          <!-- 使用的硬件 -->
          {board && (
            <div class="sidebar-section">
              <h3 class="sidebar-title">使用的开发板</h3>
              <a
                href={getLocalizedPath(`/boards/${board.id}`, currentLocale)}
                class="hardware-card"
              >
                <div class="hardware-info">
                  <span class="hardware-brand">{board.data.brand}</span>
                  <span class="hardware-model">{board.data.model}</span>
                </div>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"/>
                  <path d="M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          )}

          {module && (
            <div class="sidebar-section">
              <h3 class="sidebar-title">使用的模块</h3>
              <a
                href={getLocalizedPath(`/modules/${module.id}`, currentLocale)}
                class="hardware-card"
              >
                <div class="hardware-info">
                  <span class="hardware-brand">{module.data.brand || ''}</span>
                  <span class="hardware-model">{module.data.model}</span>
                </div>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"/>
                  <path d="M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          )}
        </aside>
      </div>
    </section>
  )}

  <!-- 未找到页面 -->
  {pageType === 'detail' && !experiment && (
    <section class="not-found">
      <div class="container">
        <h1>未找到该实验</h1>
        <a href={getLocalizedPath('/experiments', currentLocale)} class="btn">返回实验列表</a>
      </div>
    </section>
  )}
</Layout>

