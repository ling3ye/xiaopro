    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-md);
  }

  .board-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--space-md);
    color: var(--color-text-primary);
  }

  .board-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
