---
/**
 * 开发板 - 列表页和详情页
 *
 * 展示所有开发板硬件信息，支持单个开发板详情查看
 * 支持多语言路由
 *
 * @route /[lang]/boards/[...path]
 *
 * @author Claude Code
 * @version 1.0.0
 */

import Layout from '../../../layouts/Layout.astro';
import Card from '../../../components/Card.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import { getCollection, getEntry } from 'astro:content';
import { useTranslations, getLocalizedPath } from '../../../utils/i18n';
import { languages } from '../../../i18n/config';
import type { SupportedLocale } from '../../../i18n/config';
import type { CollectionEntry } from 'astro:content';

// 获取语言参数
export async function getStaticPaths() {
  const paths: any[] = [];

  // 获取所有开发板
  const boards = await getCollection('boards');

  for (const lang of Object.keys(languages)) {
    // 列表页路径
    paths.push({ params: { lang, path: undefined } });

    // 详情页路径
    boards.forEach((board) => {
      paths.push({ params: { lang, path: board.id } });
    });
  }

  return paths;
}

const { lang, path: id } = Astro.params;
const currentLocale: SupportedLocale = lang as SupportedLocale;
const t = useTranslations(currentLocale);

const isListPage = !id;

// 获取所有开发板
const allBoards = await getCollection('boards');

// 详情页：获取当前开发板数据
let board: CollectionEntry<'boards'> | undefined = undefined;
let relatedExperiments: CollectionEntry<'experiments'>[] = [];
let relatedSolutions: CollectionEntry<'solutions'>[] = [];
let currentDoc: any = null;

if (!isListPage) {
  board = await getEntry('boards', id);
  if (board) {
    // 获取相关文章 - 只获取当前语言的文章
    // boardId 是 reference 类型，需要比较其 id 属性
    // 文章 id 格式：category/lang/slug.md，需要检查是否包含 /lang/
    relatedExperiments = await getCollection('experiments', (entry) => {
      const boardId = entry.data.boardId;
      const boardIdStr = typeof boardId === 'object' && boardId !== null ? boardId.id : String(boardId);
      return boardIdStr === id && entry.id.includes(`/${lang}/`);
    });

    relatedSolutions = await getCollection('solutions', (entry) => {
      const boardId = entry.data.boardId;
      const boardIdStr = typeof boardId === 'object' && boardId !== null ? boardId.id : String(boardId);
      return boardIdStr === id && entry.id.includes(`/${lang}/`);
    });

    // 获取开发板详细文档并筛选
    const allBoardDocs = await getCollection('boardDocs', (entry) => {
      return 'boardId' in entry.data && entry.data.boardId;
    });

    // 根据开发板ID和当前语言筛选文档
    currentDoc = allBoardDocs.find((doc: any) => {
      const docBoardId = (doc.data.boardId as any).id || String(doc.data.boardId);
      return docBoardId === id && doc.id.startsWith(`${lang}/`);
    });
  }
}

// 面包屑导航
const breadcrumbItems = [
  { label: t('nav.home'), href: getLocalizedPath('/', currentLocale) },
  { label: t('nav.boards'), href: getLocalizedPath('/boards', currentLocale) },
];

if (!isListPage && board) {
  breadcrumbItems.push({
    label: board.data.model,
    href: getLocalizedPath(`/boards/${id}`, currentLocale)
  });
}

// 构建结构化数据
let structuredData: any = null;
const siteUrl = Astro.site || 'https://lingflux.com';

// 获取当前语言的 specs 和 keywords
const getLocalizedSpecs = (specs: any) => {
  if (!specs) return {};
  // 如果 specs 已经是语言嵌套结构
  if (typeof specs === 'object' && !Array.isArray(specs) && Object.keys(specs).some(k => ['zh-cn', 'zh-tw', 'en', 'ja'].includes(k))) {
    return specs[currentLocale] || specs['zh-cn'] || {};
  }
  // 如果 specs 是旧格式（平铺结构），直接返回
  return specs;
};

const getLocalizedKeywords = (keywords: any) => {
  if (!keywords) return [];
  // 如果 keywords 是字符串数组（旧格式），直接返回
  if (Array.isArray(keywords)) {
    return keywords;
  }
  // 如果 keywords 是语言嵌套结构
  if (typeof keywords === 'object' && !Array.isArray(keywords)) {
    return keywords[currentLocale] || keywords['zh-cn'] || [];
  }
  return [];
};

if (!isListPage && board) {
  const localizedSpecs = getLocalizedSpecs(board.data.specs);
  // 开发板详情页的结构化数据
  const boardSpecs = localizedSpecs ? Object.entries(localizedSpecs).map(([k, v]) => `${k}: ${v}`).join(', ') : '';
  structuredData = {
    '@context': 'https://schema.org',
    '@type': 'Product',
    name: board.data.model,
    brand: {
      '@type': 'Brand',
      name: board.data.brand
    },
    description: boardSpecs || `${board.data.brand} ${board.data.model} 开发板`,
    image: board.data.image ? new URL(board.data.image, siteUrl).href : undefined
  };
}

// 动态 meta description
const pageDescription = !isListPage && board
  ? (() => {
      const localizedSpecs = getLocalizedSpecs(board.data.specs);
      return localizedSpecs ? Object.entries(localizedSpecs).slice(0, 3).map(([k, v]) => `${k}: ${v}`).join(', ') : `${board.data.brand} ${board.data.model} 开发板的详细规格参数与使用说明`;
    })()
  : '各类主流开发板硬件介绍与规格参数，为您的项目选择合适的开发板。';
---

<Layout
  title={isListPage ? t('nav.boards') : board?.data.model}
  description={pageDescription}
  lang={lang}
  currentPath={`/${lang}/boards/${id || ''}`}
  image={!isListPage && board?.data.image ? board.data.image : undefined}
  structuredData={structuredData}
>
  <!-- 面包屑导航 -->
  <div class="container">
    <Breadcrumb items={breadcrumbItems} />
  </div>

  <!-- 列表页 -->
  {isListPage && (
    <section class="category-page">
      <div class="container">
        <!-- 页头 -->
        <header class="category-header">
          <h1 class="category-title">{t('nav.boards')}</h1>
          <p class="category-description">
            {t('footer.description')}
          </p>
          <div class="category-stats">
            <span class="stat-item">
              <span class="stat-value">{allBoards.length}</span>
              <span class="stat-label">{t('nav.boards')}</span>
            </span>
          </div>
        </header>

        <!-- 品牌筛选（简单实现） -->
        <div class="filter-bar">
          <button class="filter-btn filter-btn--active">全部</button>
          {Array.from(new Set(allBoards.map(b => b.data.brand))).map(brand => (
            <button class="filter-btn">{brand}</button>
          ))}
        </div>

        <!-- 开发板列表 -->
        <div class="board-grid">
          {allBoards.map(board => {
            const localizedSpecs = getLocalizedSpecs(board.data.specs);
            return (
              <Card
                type="board"
                title={board.data.model}
                description={`${board.data.brand} - ${Object.entries(localizedSpecs || {})
                  .slice(0, 2)
                  .map(([k, v]) => `${k}: ${v}`)
                  .join(', ')}`}
                link={getLocalizedPath(`/boards/${board.id}`, currentLocale)}
                brand={board.data.brand}
                specs={localizedSpecs}
                image={board.data.image}
              />
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- 详情页 -->
  {!isListPage && board && (
    <section class="board-detail">
      <div class="container">
        <!-- 开发板头部 -->
        <header class="board-header">
          <div class="board-badge">{board.data.brand}</div>
          <h1 class="board-title">{board.data.model}</h1>
          {board.data.officialUrl && (
            <a
              href={board.data.officialUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="board-link"
            >
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
              </svg>
              {t('board.officialDocs')}
            </a>
          )}
        </header>

        <div class="board-layout">
          <!-- 主内容区 -->
          <main class="board-main">
            <!-- 规格参数 -->
            <section class="board-section">
              <h2 class="section-title">{t('board.specs')}</h2>
              <div class="specs-grid">
                {Object.entries(getLocalizedSpecs(board.data.specs) || {}).map(([key, value]) => (
                  <div class="spec-item">
                    <span class="spec-key">{key}</span>
                    <span class="spec-value">{String(value)}</span>
                  </div>
                ))}
              </div>
            </section>

            <!-- 开发板详细文档 -->
            {currentDoc && (
              <section class="board-section">
                <div class="doc-content prose" set:html={currentDoc.rendered?.html} />
              </section>
            )}

            <!-- 关键词标签 -->
            {(() => {
                const localizedKeywords = getLocalizedKeywords(board.data.keywords);
                return localizedKeywords && localizedKeywords.length > 0;
              })() && (
              <section class="board-section">
                <h2 class="section-title">{t('board.relatedTags')}</h2>
                <div class="keywords-list">
                  {getLocalizedKeywords(board.data.keywords).map((keyword: string) => (
                    <a href={`/tags/${keyword}`} class="keyword-tag">
                      {keyword}
                    </a>
                  ))}
                </div>
              </section>
            )}
          </main>

          <!-- 侧边栏 -->
          <aside class="board-sidebar">
            <!-- 相关实验 -->
            {relatedExperiments.length > 0 && (
              <div class="sidebar-section">
                <h3 class="sidebar-title">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10 9 9 9 8 9"/>
                  </svg>
                  相关基础实验
                  <span class="count-badge">{relatedExperiments.length}</span>
                </h3>
                <div class="related-list">
                  {relatedExperiments.slice(0, 5).map(exp => {
                    // 实验路径格式：category/zh-cn/slug.md
                    // 需要提取 category 和 slug
                    const pathParts = exp.id.split('/');
                    const category = pathParts[0]; // esp32, arduino, etc.
                    const slug = pathParts[pathParts.length - 1].replace(/\.md$/, '');
                    return (
                      <a
                        href={getLocalizedPath(`/experiments/${category}/${slug}`, currentLocale)}
                        class="related-item"
                      >
                        <span class="related-title">{exp.data.title}</span>
                      </a>
                    );
                  })}
                </div>
              </div>
            )}

            <!-- 相关方案 -->
            {relatedSolutions.length > 0 && (
              <div class="sidebar-section">
                <h3 class="sidebar-title">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                  相关方案
                  <span class="count-badge">{relatedSolutions.length}</span>
                </h3>
                <div class="related-list">
                  {relatedSolutions.slice(0, 5).map(sol => (
                    <a
                      href={getLocalizedPath(`/solutions/${sol.id.replace(/^[a-z-]+\//, '').replace('.md', '')}`, currentLocale)}
                      class="related-item"
                    >
                      <span class="related-title">{sol.data.title}</span>
                    </a>
                  ))}
                </div>
              </div>
            )}
          </aside>
        </div>
      </div>
    </section>
  )}

  <!-- 未找到页面 -->
  {!isListPage && !board && (
    <section class="not-found">
      <div class="container">
        <h1>未找到该开发板</h1>
        <a href={getLocalizedPath('/boards', currentLocale)} class="btn">返回开发板列表</a>
      </div>
    </section>
  )}
</Layout>

